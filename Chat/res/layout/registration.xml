<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welt"
    android:orientation="vertical" >

    <Button
        android:id="@+id/weiter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="23dp"
        android:textColor="#ffffff"
        android:text="Weiter"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/pw02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name02"
        android:layout_alignRight="@+id/name02"
        android:layout_below="@+id/name02"
        android:layout_marginTop="22dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/name02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="nickname"
        android:inputType="text" />

    <EditText
        android:id="@+id/email02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw02"
        android:layout_below="@+id/pw02"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="email(optional)"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/checkgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email02"
        android:layout_below="@+id/email02"
        android:layout_marginTop="28dp"
        android:text="mÃ¤nnlich"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

      <CheckBox
          android:id="@+id/checkgender2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/checkgender"
          android:layout_alignBottom="@+id/checkgender"
          android:layout_alignRight="@+id/email02"
          android:text="weiblich"
          android:textColor="#ffffff"
          android:textSize="15sp" />

</RelativeLayout>